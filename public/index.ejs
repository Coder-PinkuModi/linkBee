  <div class="paragraphs">
    <h1 class="headings" id="home">What do we do ?</h1>
    <p>
      A link shortening service is an online tool that takes a long URL
      (Uniform Resource Locator) and converts it into a shorter, more
      manageable link. These services are particularly useful for simplifying
      complex URLs, making them easier to share, remember, and fit within
      character limits on social media platforms.
    </p>
  </div>
  <div class="url-box">
    <h2 class="url-heading">LnkSnip</h2>
    <!-- Form rendering -->
    <form method="POST" action="api/createId">
      <label for="url-input" id="input-label">Enter your link here :</label>
      <input type="text" name="url" placeholder="Enter full link- https://xyz.com" class="url-input" />
      <div>
        <button type="submit" class="buttons" id="submit-btn">Generate</button>
        <button type="reset" class="buttons" id="reset-btn">clear</button>
      </div>
    </form>

    <!-- Table containing the URLs -->
    <% if (locals.urls) { %>
      <table class="link-history">
        <% if(urls && urls.length> 0) { %>
          <thead>
            <tr>
              <th>S No.</th>
              <th>Short Id</th>
              <th>Url</th>
              <th>Total Clicks</th>
            </tr>
          </thead>
          <tbody>
            <% urls.forEach((url, index)=> { %>
              <tr>
                <td>
                  <%= index + 1 %>
                </td>
                <td>
                  <%= url.shortId %>
                </td>
                <td>
                  <%= url.url %>
                </td>
                <td>
                  <%= url.clicks %>
                </td>
              </tr>
              <% }); %>
          </tbody>
          <% } else { %>
            <tr>
              <td colspan="4">No URLs to show</td>
            </tr>
            <% } %>
      </table>
      <% } %>

